datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

enum PairingStatus {
  PENDING
  COMPLETED
  EXPIRED
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  username     String        @unique
  password     String
  bucketName   String?       @unique
  createdAt    DateTime      @default(now())
  devices      UserDevice[]
  models       Model[]
  subscription Subscription?
  payments     Payment[]
  pairingSessions PairingSession[]
}

model UserDevice {
  id       Int      @id @default(autoincrement())
  userId   Int
  deviceId Int
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  device   Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  pairedAt DateTime @default(now())

  @@unique([userId, deviceId])
}

model Device {
  id           Int          @id @default(autoincrement())
  serialNumber String       @unique
  modelId      Int
  model        DeviceModel  @relation(fields: [modelId], references: [id])
  createdAt    DateTime     @default(now())
  users        UserDevice[]
}

model DeviceModel {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  modelNumber String   @unique
  devices     Device[]
}

model PairingSession {
  id                 String        @id @default(uuid())
  userId             Int
  user               User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  deviceSerialNumber String
  status             PairingStatus @default(PENDING)
  createdAt          DateTime      @default(now())
  expiresAt          DateTime

  @@index([userId])
  @@index([status])
}

model UserModel {
  id        Int      @id @default(autoincrement())
  userId    Int
  modelPath String // Chemin du mod√®le (bucketName/folderName)
  modelId   String
  liked     Boolean  @default(true)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, modelPath])
  @@index([modelPath])
}

model SubscriptionPlan {
  id            Int            @id @default(autoincrement())
  name          String         @unique
  price         Decimal        @default(0)
  storageLimit  Int
  features      String[]
  createdAt     DateTime       @default(now())
  subscriptions Subscription[]

  @@index([name])
}

model Subscription {
  id          Int              @id @default(autoincrement())
  userId      Int              @unique
  planId      Int
  bucketName  String           @unique
  storageUsed BigInt           @default(0)
  isActive    Boolean          @default(true)
  startDate   DateTime         @default(now())
  endDate     DateTime?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan        SubscriptionPlan @relation(fields: [planId], references: [id], onDelete: Restrict)

  @@index([userId])
  @@index([planId])
  @@index([bucketName])
}

model Payment {
  id            String   @id @default(cuid())
  userId        Int
  stripeSession String   @unique
  amount        Int
  status        String   @default("pending") // "pending" | "paid" | "failed"
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([stripeSession])
  @@index([status])
}

model SubscriptionPlan {
  id            Int            @id @default(autoincrement())
  name          String         @unique
  price         Decimal        @default(0)
  storageLimit  Int
  features      String[]
  createdAt     DateTime       @default(now())
  subscriptions Subscription[]

  @@index([name])
}

model Subscription {
  id          Int              @id @default(autoincrement())
  userId      Int              @unique
  planId      Int
  bucketName  String           @unique
  storageUsed BigInt           @default(0)
  isActive    Boolean          @default(true)
  startDate   DateTime         @default(now())
  endDate     DateTime?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan        SubscriptionPlan @relation(fields: [planId], references: [id], onDelete: Restrict)

  @@index([userId])
  @@index([planId])
  @@index([bucketName])
}

model Payment {
  id            String   @id @default(cuid())
  userId        Int
  stripeSession String   @unique
  amount        Int
  status        String   @default("pending") // "pending" | "paid" | "failed"
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([stripeSession])
  @@index([status])
}
