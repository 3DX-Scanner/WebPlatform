datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

enum PairingStatus {
  PENDING
  COMPLETED
  EXPIRED
}

model User {
  id              Int              @id @default(autoincrement())
  email           String           @unique
  username        String           @unique
  password        String
  bucketName      String?          @unique
  createdAt       DateTime         @default(now())
  devices         UserDevice[]
  modelLikes      ModelLike[]
  pairingSessions PairingSession[]
}

model UserDevice {
  id       Int      @id @default(autoincrement())
  userId   Int
  deviceId Int
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  device   Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  pairedAt DateTime @default(now())

  @@unique([userId, deviceId])
}

model Device {
  id           Int          @id @default(autoincrement())
  serialNumber String       @unique
  modelId      Int
  model        DeviceModel  @relation(fields: [modelId], references: [id])
  createdAt    DateTime     @default(now())
  users        UserDevice[]
}

model DeviceModel {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  modelNumber String   @unique
  devices     Device[]
}

model PairingSession {
  id                 String        @id @default(uuid())
  userId             Int
  user               User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  deviceSerialNumber String
  status             PairingStatus @default(PENDING)
  createdAt          DateTime      @default(now())
  expiresAt          DateTime

  @@index([userId])
  @@index([status])
}

model ModelLike {
  id        Int      @id @default(autoincrement())
  userId    Int
  modelId   String // Identifiant du mod√®le (bucketName/folderName)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, modelId])
  @@index([modelId])
}
