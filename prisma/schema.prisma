datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  username     String        @unique
  password     String
  bucketName   String?       @unique
  createdAt    DateTime      @default(now())
  devices      UserDevice[]
  models       Model[]
  subscription Subscription?
  payments     Payment[]
}

model UserDevice {
  id       Int      @id @default(autoincrement())
  userId   Int
  deviceId Int
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  device   Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  pairedAt DateTime @default(now())

  @@unique([userId, deviceId])
}

model Device {
  id           Int          @id @default(autoincrement())
  serialNumber String       @unique
  modelId      Int
  model        DeviceModel  @relation(fields: [modelId], references: [id])
  createdAt    DateTime     @default(now())
  users        UserDevice[]
}

model DeviceModel {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  devices Device[]
}

model Model {
  id        Int      @id @default(autoincrement())
  userId    Int
  modelId   String // Identifiant du modèle (bucketName/folderName)
  liked     Boolean  @default(true) // Indique si l'utilisateur a liké ce modèle
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, modelId])
  @@index([modelId])
}

model SubscriptionPlan {
  id            Int            @id @default(autoincrement())
  name          String         @unique // "Free", "Pro", "Enterprise"
  price         Decimal        @default(0) // Prix en euros (0 pour Free, 7.99 pour Pro, 20.00 pour Enterprise)
  storageLimit  Int // Limite de stockage en MB (1024 MB pour Free, 512000 MB pour Pro, 1024000 MB pour Enterprise)
  features      String[] // Liste des fonctionnalités (ex: ["Export ply", "Support communautaire"])
  createdAt     DateTime       @default(now())
  subscriptions Subscription[]

  @@index([name])
}

model Subscription {
  id          Int              @id @default(autoincrement())
  userId      Int              @unique
  planId      Int // Référence au plan d'abonnement
  bucketName  String           @unique // Nom du bucket associé
  storageUsed BigInt           @default(0) // Stockage utilisé en bytes
  isActive    Boolean          @default(true) // Si l'abonnement est actif
  startDate   DateTime         @default(now())
  endDate     DateTime? // Date d'expiration (null pour les abonnements gratuits)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan        SubscriptionPlan @relation(fields: [planId], references: [id], onDelete: Restrict)

  @@index([userId])
  @@index([planId])
  @@index([bucketName])
}

model Payment {
  id            String      @id @default(cuid())
  userId        Int
  stripeSession String      @unique
  amount        Int // Montant en centimes (ex: 799 pour 7.99€)
  status        String      @default("pending") // "pending" | "paid" | "failed"
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([stripeSession])
  @@index([status])
}
